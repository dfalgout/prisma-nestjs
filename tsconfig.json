{
  "compilerOptions": {
    "target": "es2019",
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"], // dom is added for prismjs :(
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true // testing with nestjs imports
  }
}